<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cable_car" />

        <TextView
            android:id="@+id/lblTourTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/column1r1Tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblLanguagesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Languages" />

                    <TextView
                        android:id="@+id/lblLanguages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spanish" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column2r1Tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDurationTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration" />

                    <TextView
                        android:id="@+id/lblDurationStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start: " />
                    <TextView
                        android:id="@+id/lblDurationEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="End: " />
                    <TextView
                        android:id="@+id/lblDurationDays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days: " />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column3r1Tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblPriceTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price" />

                    <TextView
                        android:id="@+id/lblPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/column1r2Tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblCategoriesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Categories" />

                    <TextView
                        android:id="@+id/lblCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Passive" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column2r2Tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblCapacityTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacity" />

                    <TextView
                        android:id="@+id/lblCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="min: 2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column3r2Tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblMeetingPointTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Meeting Point" />

                    <TextView
                        android:id="@+id/lblMeetingPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curva de OlguÃ­n" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/lblDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <TextView
            android:id="@+id/lblDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion largaaa muuy larga que deberia bajar" />

        <TextView
            android:id="@+id/lblTipsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips" />

        <TextView
            android:id="@+id/lblTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip1" />

        <TextView
            android:id="@+id/lblLocationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location" />

        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/default_image" />

        <TextView
            android:id="@+id/lblGuideTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guide" />

        <TextView
            android:id="@+id/lblGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taylor Guide" />

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true" />

        <Button
            android:id="@+id/btnBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOOK" />


    </LinearLayout>
</ScrollView>