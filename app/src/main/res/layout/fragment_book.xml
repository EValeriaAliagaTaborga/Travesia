<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblTourTitleBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title" />

    <TextView
        android:id="@+id/lblDateTitleBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date" />

    <EditText
        android:id="@+id/txtDateBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none" />

    <!--CalendarView
        android:id="@+id/calendarViewDateBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" /-->

    <TextView
        android:id="@+id/lblQuantityTitleBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of People" />

    <EditText
        android:id="@+id/txtQuantityBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSendBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND" />

    <TextView
        android:id="@+id/lblMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El guia se contactara con usted" />
</LinearLayout>