<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- More Fragment Styles-->

    <style name="MoreFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/fallingsky</item>
        <item name="android:maxLines">18</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="MoreFont.Title">
        <item name="android:fontFamily">@font/fallingskybd</item>
        <item name="android:textSize">17pt</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MoreFontTravis">
        <item name="android:fontFamily">@font/frozenice</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17pt</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

</resources>
